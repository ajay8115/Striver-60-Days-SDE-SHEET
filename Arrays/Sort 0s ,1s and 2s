#include <bits/stdc++.h>
#define ll long long int
#define ld long double
#define kk '\n'
using namespace std;

class Solution
{
public:
    void sortColors(vector<int> &a)
    {
        int n = a.size();

        int low = 0, mid = 0, high = n - 1;

        while (mid <= high)
        {
            if (a[mid] == 0)
            {
                swap(a[low], a[mid]);
                low++;
                mid++;
            }

            else if (a[mid] == 1)
            {
                mid++;
            }

            else if (a[mid] == 2)
            {
                swap(a[mid], a[high]);
                high--;
            }
        }
    }
};
